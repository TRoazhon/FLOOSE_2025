# Configuration FLOOSE - Exemple
# Copier ce fichier en .env et ajuster les valeurs

# === ENVIRONNEMENT ===
FLASK_ENV=development
DEBUG=True
SECRET_KEY=change-this-secret-key-in-production
PORT=5002

# === AUTHENTIFICATION & SÉCURITÉ ===
JWT_SECRET_KEY=change-this-jwt-secret-in-production
JWT_EXPIRY_HOURS=24
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
ENABLE_CSRF=True
SESSION_COOKIE_SECURE=False

# === BASE DE DONNÉES ===
DATA_DIR=data
BACKUP_DIR=backups
LOCK_DIR=locks

# === PERFORMANCE ===
CSV_CACHE_SIZE=1000
FILE_LOCK_TIMEOUT=30.0
ENABLE_PERFORMANCE_LOGGING=True

# === LOGGING ===
LOG_LEVEL=INFO
LOG_FILE=floose.log
ENABLE_FILE_LOGGING=True

# === EXPORT ===
MAX_EXPORT_RECORDS=10000
EXPORT_TIMEOUT_SECONDS=300

# === APPLE SIGN IN ===
# Pour activer Sign in with Apple en production:
# 1. Creer un App ID sur developer.apple.com
# 2. Activer "Sign in with Apple" capability
# 3. Creer un Service ID et configurer le domaine
APPLE_CLIENT_ID=com.floose.app
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_REDIRECT_URI=http://localhost:5003/auth/apple/callback

# === CRÉDIT AGRICOLE API (DSP2/Open Banking) ===
# Activer l'intégration Crédit Agricole
CA_ENABLED=False
# Identifiants OAuth2 obtenus sur le portail développeur Crédit Agricole
CA_CLIENT_ID=your-client-id
CA_CLIENT_SECRET=your-client-secret
# URI de redirection (doit correspondre à celle enregistrée sur le portail)
CA_REDIRECT_URI=http://localhost:5002/api/ca/callback
# Environnement: 'sandbox' pour les tests, 'production' pour la prod
CA_ENVIRONMENT=sandbox
